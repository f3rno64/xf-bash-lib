{
  "name": "@f3rno64/xf-bash-lib",
  "version": "0.0.10",
  "description": "Personal bash utility library",
  "main": "index.js",
  "engines": {
    "node": "^17.8.0"
  },
  "directories": {
    "lib": "lib",
    "vendor": "vendor"
  },
  "scripts": {
    "postinstall": "npm run vendor",
    "vendor": "git submodule init && git submodule update",
    "gen-readme": "rm README.md && node scripts/gen_readme.js",
    "release": "npm run update-version && git push origin master --follow-tags && npm publish",
    "update-deps": "./node_modules/.bin/updates -u -g -c",
    "update-version": "./node_modules/.bin/standard-version",
    "lint-entry": "./node_modules/.bin/shellcheck -x xf_bash_lib.sh",
    "lint-lib": "./node_modules/.bin/shellcheck -x lib/*.sh -P lib",
    "lint-aliases": "./node_modules/.bin/shellcheck -x lib/aliases/*.sh -P lib/aliases",
    "lint-bashrc": "./node_modules/.bin/shellcheck -x lib/bashrc/*.sh -P lib/bashrc",
    "lint-core": "./node_modules/.bin/shellcheck -x lib/core/*.sh -P lib/core",
    "lint-functions": "./node_modules/.bin/shellcheck -x lib/functions/*.sh -P lib/functions",
    "lint-util": "./node_modules/.bin/shellcheck -x lib/util/*.sh -P lib/util",
    "lint": "npm run lint-entry && npm run lint-lib && npm run lint-aliases && npm run lint-bashrc && npm run lint-core && npm run lint-functions && npm run lint-util",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/f3rno64/xf-bash-lib.git"
  },
  "keywords": [
    "bash",
    "utility",
    "scripts",
    "dotfiles",
    "nvm",
    "rvm",
    "macos",
    "termux"
  ],
  "author": "Mircea Cristian Mihalache <f3rno64@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/f3rno64/xf-bash-lib/issues"
  },
  "homepage": "https://github.com/f3rno64/xf-bash-lib#readme",
  "devDependencies": {
    "colors": "^1.4.0",
    "husky": "^7.0.4",
    "jsdoc-to-markdown": "^7.1.1",
    "lodash": "^4.17.21",
    "shellcheck": "^1.1.0",
    "signale": "^1.4.0",
    "standard-version": "^9.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
